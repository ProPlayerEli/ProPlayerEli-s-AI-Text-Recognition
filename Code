<!DOCTYPE html>
<html>
<head>
    <title>AI Text Detector</title>
</head>
<body>
    <h1>AI Text Detector</h1>
    <p>Enter some text:</p>
    <textarea id="text-input" rows="4" cols="50"></textarea>
    <br>
    <button onclick="detect()">Detect</button>
    <p id="result"></p>

    <script>
        // Train the model
        const model = new brain.NeuralNetwork();
        const trainingData = [
            { input: "The quick brown fox jumps over the lazy dog.", output: { ai: false } },
            { input: "Hello, how are you today?", output: { ai: false } },
            { input: "The cat sat on the mat.", output: { ai: false } },
            { input: "This is a test sentence.", output: { ai: false } },
            { input: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.", output: { ai: true } },
            { input: "In ultricies bibendum elit, sit amet accumsan dui facilisis quis.", output: { ai: true } },
            { input: "Maecenas quis leo vitae purus hendrerit varius.", output: { ai: true } },
            { input: "Sed euismod erat eget odio congue, eu tristique augue venenatis.", output: { ai: true } }
        ];
        model.train(trainingData);

        // Detect if the text was generated by an AI
        function detect() {
            const text = document.getElementById("text-input").value;
            const output = model.run(text);
            if (output.ai) {
                document.getElementById("result").innerHTML = "This text was most likely generated by an AI.";
            } else {
                document.getElementById("result").innerHTML = "This text was not generated by an AI.";
            }
        }
    </script>
</body>
</html>
